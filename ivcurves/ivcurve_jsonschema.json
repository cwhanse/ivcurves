{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/cwhanse/ivcurves/ivcurves/ivcurve_jsonschema.json",
  "title": "IV Curve JSON Schema",
  "description": "",
  "type": "object",
  "properties": {
    "Manufacturer": {
      "description": "",
      "type": "string"
    },
    "Sandia ID": {
      "description": "",
      "type": "string"
    },
    "Material": {
      "description": "",
      "type": "string"
    },
    "IV Curves": {
      "description": "",
      "type": "array",
      "items": {
          "$ref": "#/$defs/IV Curve"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "Manufacturer",
    "Sandia ID",
    "Material",
    "IV Curves"
  ],
  "$defs": {
    "IV Curve": {
      "description": "",
      "type": "object",
      "properties": {
        "Index": {
          "description": "",
          "type": "integer"
        },
        "Voltages": {
          "description": "",
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "number"
              }
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/NumberQuoted"
              }
            }
          ]
        },
        "Currents": {
          "description": "",
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "number"
              }
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/NumberQuoted"
              }
            }
          ]
        },
        "v_oc": {
          "description": "",
          "$ref": "#/$defs/Number"
        },
        "i_sc": {
          "description": "",
          "$ref": "#/$defs/Number"
        },
        "v_mp": {
          "description": "",
          "$ref": "#/$defs/Number"
        },
        "i_mp": {
          "description": "",
          "$ref": "#/$defs/Number"
        },
        "p_mp": {
          "description": "",
          "$ref": "#/$defs/Number"
        },
        "cells_in_series": {
          "description": "",
          "type": [
            "integer",
            "null"
          ]
        },
        "Irradiance": {
          "description": "",
          "$ref": "#/$defs/NumberOption"
        },
        "Sweep direction": {
          "description": "",
          "type": "string"
        },
        "Datetime": {
          "description": "",
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "Voltages",
        "Currents",
        "Index",
        "v_oc",
        "i_sc",
        "v_mp",
        "i_mp",
        "p_mp",
        "cells_in_series",
        "Irradiance",
        "Sweep direction",
        "Datetime"
      ]
    },
    "Number": {
      "description": "A number, a number in quotes or null.",
      "oneOf": [
        {
          "type": "number"
        },
        {
          "$ref": "#/$defs/NumberQuoted"
        }
      ]
    },
    "NumberQuoted": {
      "description": "Match a quoted number in decimal or exponential form. Pattern source: https://www.regular-expressions.info/floatingpoint.html",
      "type": "string",
      "pattern": "(^[-+]?[0-9]*[.]?[0-9]+$)|(^[-+]?[0-9]*[.]?[0-9]+([eE][-+]?[0-9]+)?$)"
    },
    "NumberOption": {
      "description": "A Number that can be null.",
      "oneOf": [
        {
          "$ref": "#/$defs/Number"
        },
        {
          "type": "null"
        }
      ]
    }
  }
}
